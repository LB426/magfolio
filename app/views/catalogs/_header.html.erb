<div class="needle">
  <a href="/" class="homepage">
    <img alt="Sortfolio" src="/images/potreb_oboz_logo_2.gif" height="87" width="368">
  </a>
  <h1>Персональные веб каталоги товаров и услуг</h1>
</div>
<% if !current_user || is_admin %>
<div class="signup guest_user" id="signup">
  <a href="/signup"></a>
  <div class="signup_description" id="slide_listed" style="height: 70px; ">
    <div class="signup_text">
      <a href="/signup">Создай каталог. Внеси товары. Создай услуги. Добавь фото.</a>
    </div>
  </div>
</div>
<% end %>
<div class="nav">
  <%= link_to "Поиск", search_path -%> |
  <a href="/about">О каталогах</a> |
  <a href="/izbrannoes">Избранное<span id="izbrannoe_count"><%= izbrannoe_count -%></span></a> |
  <% if current_user %>
    <% if !is_admin %>
    <a href="<%= catalog_orders_path(current_user.catalogs.first) %>" title="Заказы по каталогу">Заказы</a> |
    <%= link_to current_user.email, shortcut_catalog_path(current_user.catalogs.first.shortcut_name) %> |
    <% end %>
    <a href="/logout" title="Выход">Выход</a>
  <% else %>
    <a href="/login" class="guest_user">Войти в каталог</a>
  <% end %>
</div>
<%= render 'filterbar' %>
<div style="clear:both;"></div>