<% content_for :head do %>
  <%= javascript_include_tag 'order.js' %>
<% end %>

<script type="text/javascript">
//<![CDATA[
  var order_id = <%= @order.id %> ;
  var form_authenticity_token = '<%= form_authenticity_token %>' ;
//]]>
</script>

<div class="column left">
	<ul class="orderstack">
	  <li style="<%= order_state_color(@order) %>">
	    <strong><a href="#" title="свернуть/развернуть" id="state_show_hide">Состояние:</a></strong><br>
	    <div id="last_state"></div>
	    <div id="order_state">
        <%= render :partial => 'order_state' %>
      </div>
      <% if current_user_self? %>
      <select id="change_state">
        <option value="0">изменить состояние заказа</option>
        <option value="2">передан на компоновку</option>
        <option value="3">компонуется</option>
        <option value="4">передан на доставку</option>
        <option value="5">получен покупателем</option>
        <option value="6">закрыт, исполнен</option>
        <option value="6">передать в архив</option>
      </select><a href="#" title="добавить комментарий к последнему состоянию заказа">коммент</a>
      <% end %>
    </li>
	  <li><strong>номер заказа: <%= @order.id %></strong></li>
	  <li><strong>Продавец: <%= @catalog.company_name %></strong></li>
	  <li><strong>Покупатель: <%= @order.customer_id %></strong></li>
	  <li>
	    <strong>Доставка :</strong>
	    <%= @order.delivery['method'] %>
    </li>
    <li>
      <strong>Оплата :</strong>
      <%= @order.payment['payd_system'] %>
    </li>
    <li>Версия для печати</li>
  </ul>
</div>
<div class="column right">
<table class="order">
  <!--<caption>перечень товаров</caption>-->
  <thead>
    <tr>
      <th scope="col">Название товара</th>
      <th scope="col">Цена, руб.</th>
      <th scope="col">Количество</th>
    </tr>
  </thead>
  <tbody>
    <% itogo_summa = 0 %>
    <% itogo_amount = 0 %>
    <% @order.products.each do |product| %>
      <tr>
        <th scope="row">
          <%= link_to product['name'], root_path %>
        </th>
        <td align="center">
          <%= product['price'] %>
          <% itogo_summa = itogo_summa + product['price'].to_i %>
        </td>
        <td align="center">
          <%= product['amount'] %>
          <% itogo_amount = itogo_amount + product['amount'].to_i %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td align="center">доставка</td>
      <td align="center">0</td>
      <td align="center">&nbsp;</td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <th scope="row">Итого:</th>
      <th align="center">
        <strong><%= itogo_summa %></strong> руб.
      </th>
      <th align="center">
        <strong><%= itogo_amount %></strong> шт.</th>
    </tr>
  </tfoot>
</table>
</div>