надо добавить для ошибок и уведомлений
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

# посмотреть кодировку таблиц или др. параметры
STATUS;
SHOW VARIABLES LIKE "%version%";
USE your_database_of_interest;
SHOW CREATE DATABASE your_database_of_interest;
SHOW TABLES IN your_database_of_interest;
SHOW TABLE STATUS WHERE Name = 'table_name';
SHOW VARIABLES LIKE 'character_set%';
SHOW VARIABLES LIKE 'collation%'; 

# сменить кодировку базы и таблиц:
ALTER DATABASE magfolio_production DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci 
ALTER TABLE  `business_deals` DEFAULT CHARACTER SET utf8 COLLATE utf8_unicode_ci

если выдаётся ошибка "чего-то-там... invalid multibyte char (US-ASCII)"
то добавить в начало файла  # encoding: utf-8
или делать интернационализацию через config/locales